pipeline{
    
    agent {
        node 'agent1'
    }
    
    tools {
        maven 'apache-maven-3.6.3'
        jdk   'jdk1.8.0_202'
    }
    
    stages{
           stage('validate'){
    		agent {
        	node 'agent1'
    		}
               steps{
	    	   dir('mvn-project'){
	    		bat 'mvn validate'
		   }
               }
            
            }
            stage('Compile'){
		agent {
        	node 'agent1'
    		}
                steps{
                    dir('mvn-project'){
                      bat 'mvn compile'
                    }
		    stash 'agent1-stash'                
                        
                }
            }
            stage('Test'){
		agent {
        	node 'agent2'
    		}
                steps{
		    unstash 'agent1-stash'
                    dir('mvn-project'){
                       bat 'mvn test'
                    }    
                }    
            }
            stage('Package'){
		agent {
        	node 'agent2'
    		}
                steps{
                    dir('mvn-project'){
                       bat 'mvn package'
                    }
                }
            }
            stage('Verify'){
		agent {
        	node 'agent2'
    		}
                steps{
                    dir('mvn-project'){
                       bat 'mvn verify'
                    }
                }
            }
    }
}
